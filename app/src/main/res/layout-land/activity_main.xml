<RelativeLayout android:id="@+id/main_layout" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/fragment"
        android:name="tw.edu.ncku.eog.BleFragment"
        android:id="@+id/bleFragment"
        tools:layout="@layout/fragment_ble"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/energyLabel"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alpha_energy"
        android:layout_below="@+id/bleFragment"
        android:layout_alignParentStart="true" />
    <ProgressBar
        android:id="@+id/energyMeter"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        android:layout_alignTop="@id/energyLabel"
        android:layout_alignBottom="@id/energyLabel"
        android:layout_toStartOf="@id/fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/energyLabel" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:name="tw.edu.ncku.eog.TimerFragment"
        android:id="@+id/fragment"
        tools:layout="@layout/fragment_timer"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
